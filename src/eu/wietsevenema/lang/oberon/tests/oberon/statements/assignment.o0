MODULE Assignment;
/* The assignment serves to replace the current value of 
 * a variable by a new value specified by an expression. 
 * The assignment operator is written as ":=" and pronounced 
 * as "becomes".
 */
VAR a, b, c: INTEGER;

PROCEDURE test ( i, j: INTEGER; k: INTEGER); 
	BEGIN 
		i := 0;
		j := 0;
		k := 0;
		AssertEquals(5,  a);
		AssertEquals(2,  b);
		AssertEquals(99, c);
		
		AssertEquals(0, i);
		AssertEquals(0, j);
		AssertEquals(0, k)
	END test;

BEGIN
	a := 1;
	AssertEquals(1, a);
	
	b := 2;	
	AssertEquals(1, a);
	AssertEquals(2, b);
	
	c := 3;
	AssertEquals(1, a);
	AssertEquals(2, b);
	AssertEquals(3, c);
	
	
	a := 5;
	AssertEquals(5, a);
	AssertEquals(2, b);
	AssertEquals(3, c);
	
	c := 99;
	AssertEquals(5,  a);
	AssertEquals(2,  b);
	AssertEquals(99, c);
	
	test(a,b,c);
	AssertEquals(5,  a);
	AssertEquals(2,  b);
	AssertEquals(99, c)
		
END Assignment.



